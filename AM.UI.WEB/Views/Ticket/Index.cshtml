@using AM.ApplicationCore.Domain
@model IEnumerable<AM.ApplicationCore.Domain.Ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="index">
    <fieldset>
        <legend>Recherche</legend>
        Saisir un prix  :
        <input type="number" name="prix" />
        <input type="submit" value="Recherchez" />
    </fieldset>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Passenger)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAchat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Siege)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VIP)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Passenger" asp-action="_Details" asp-route-id="@item.PassengerFk">@item.Passenger.Id</a>

                </td>

                <td>
                    <a asp-controller="Flight" asp-action="_Details" asp-route-id="@item.FlightFk">@item.Flight.FlightId</a>
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.DateAchat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Siege)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VIP)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { PassengerFK = item.PassengerFk,FlightFK=item.FlightFk,NumTicket=item.NumTicket}) |
                    @Html.ActionLink("Details", "Details", new { PassengerFK = item.PassengerFk, FlightFK = item.FlightFk, NumTicket = item.NumTicket }) |
                    @Html.ActionLink("Delete", "Delete", new { PassengerFK = item.PassengerFk, FlightFK = item.FlightFk, NumTicket = item.NumTicket })
                </td>
            </tr>
        }
    </tbody>
</table>